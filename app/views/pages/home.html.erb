<div class="container">
  <div class="row">
    <% @products.each do |product| %>
    <div class="col-xs-12 col-sm-4">
      <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= product.image %>);">
        <div class="card-category"><%= product.user.first_name + ' ' + product.user.last_name %></div>
        <div class="card-description">
          <h2><%= product.title[1..30]%></h2>
          <p><%= product.description %></p>
        </div>
        <img class="card-user avatar" src= <%= product.user.avatar %>>
        <a class="card-link" href="#" ></a>
      </div>
    </div>
    <% end %>
  </div>
</div>
